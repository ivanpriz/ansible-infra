[Unit]
Description=Kafka Broker Service
Requires=network.target                 
After=network.target                 

[Service]
Type=simple
ProtectHome=off
ExecStart={{ kafka_unzip_path }}/kafka_2.12-3.4.0/bin/kafka-server-start.sh {{ kafka_unzip_path }}/kafka_2.12-3.4.0/config/server.properties
ExecStop={{ kafka_unzip_path }}/kafka_2.12-3.4.0/bin/kafka-server-stop.sh
Restart=on-abnormal

[Install]
WantedBy=multi-user.target