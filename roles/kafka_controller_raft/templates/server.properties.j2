process.roles=controller
node.id={{ groups['kafka_controllers_raft'].index(inventory_hostname) }}
controller.quorum.voters={% for controller_node in groups['kafka_controllers_raft'] %}{{ loop.index }}@{{ hostvars[controller_node]['ansible_host'] }}:9093{% if not loop.last %},{% endif %}{% endfor %}

listeners=CONTROLLER://{{ hostvars[inventory_hostname]['ansible_host'] }}:9093
controller.listener.names=CONTROLLER
listener.security.protocol.map=CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT,SSL:SSL,SASL_PLAINTEXT:SASL_PLAINTEXT,SASL_SSL:SASL_SSL
log.dirs=/opt/kafka/data/kraft-combined-logs
