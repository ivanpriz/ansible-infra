[Unit]
Description=Apache Zookeeper Service
Requires=network.target                 
After=network.target                 

[Service]
Type=simple
User=kafka
ExecStart=/home/kafka/kafka_2.12-3.4.0/bin/zookeeper-server-start.sh /home/kafka/kafka_2.12-3.4.0/config/zookeeper.properties        
ExecStop=/home/kafka/kafka_2.12-3.4.0/bin/zookeeper-server-stop.sh
Restart=on-abnormal

[Install]
WantedBy=multi-user.target